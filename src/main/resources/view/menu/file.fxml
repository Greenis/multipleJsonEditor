<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>

<Menu text="Файл"
		xmlns="http://javafx.com/javafx"
		xmlns:fx="http://javafx.com/fxml"
		fx:controller="org.me.controller.menu.FileController"
		fx:id="root">
	<MenuItem text="Открыть" onAction="#open" accelerator="CTRL+O" fx:id="openNew"/>
	<MenuItem text="Новый проект" onAction="#create" accelerator="CTRL+N" fx:id="createNew"/>
	<MenuItem text="Сохранить" onAction="#save" accelerator="CTRL+S" fx:id="save"/>
	<MenuItem text="Сохранить как..." onAction="#saveAs" accelerator="CTRL+SHIFT+S" fx:id="saveAs"/>
	<Menu text="Экспорт" fx:id="export">
		<MenuItem text="Как архив" fx:id="asArchive"/>
		<MenuItem text="Как файлы" fx:id="asFiles"/>
	</Menu>
	<MenuItem text="Настройки" onAction="#openSettings" fx:id="settings"/>
	<MenuItem text="Выйти" onAction="#exit" fx:id="exit"/>
</Menu>
